<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvColor"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/sb_0"
        android:layout_width="213dp"
        android:layout_height="24dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="16dp"
        android:max="255"
        android:progress="255"
        android:tag="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvColor" />

    <TextView
        android:id="@+id/tv_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="255"
        app:layout_constraintBottom_toBottomOf="@+id/sb_0"
        app:layout_constraintStart_toEndOf="@+id/sb_0"
        app:layout_constraintTop_toTopOf="@+id/sb_0" />

    <SeekBar
        android:id="@+id/sb_1"
        android:layout_width="215dp"
        android:layout_height="22dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:max="255"
        android:progress="0"
        android:tag="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_0" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/sb_1"
        app:layout_constraintStart_toEndOf="@+id/sb_1"
        app:layout_constraintTop_toTopOf="@+id/sb_1" />

    <SeekBar
        android:id="@+id/sb_2"
        android:layout_width="215dp"
        android:layout_height="22dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:max="255"
        android:progress="0"
        android:tag="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_1" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/sb_2"
        app:layout_constraintStart_toEndOf="@+id/sb_2"
        app:layout_constraintTop_toTopOf="@+id/sb_2" />

<!--    reset button-->

    <!--    red switch-->
    <Button
        android:id="@+id/reset_button"
        android:layout_width="181dp"
        android:layout_height="41dp"
        android:layout_marginTop="52dp"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="@+id/sb_2"
        app:layout_constraintStart_toStartOf="@+id/sb_2"
        app:layout_constraintTop_toBottomOf="@+id/sb_2" />

    <Switch
        android:id="@+id/switch0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/sb_0"
        app:layout_constraintEnd_toStartOf="@+id/sb_0"
        app:layout_constraintTop_toTopOf="@+id/sb_0" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/sb_1"
        app:layout_constraintEnd_toStartOf="@+id/sb_1"
        app:layout_constraintTop_toTopOf="@+id/sb_1" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/sb_2"
        app:layout_constraintEnd_toStartOf="@+id/sb_2"
        app:layout_constraintTop_toTopOf="@+id/sb_2" />


</androidx.constraintlayout.widget.ConstraintLayout>